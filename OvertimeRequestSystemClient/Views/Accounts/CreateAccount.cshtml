<div class="row">
    <div class="col-lg-12 margin-tb mb-4">
        <div class="pull-right">
            <a class="btn btn-info" href="https://localhost:44348/accounts/"> Back</a>
        </div>
    </div>
</div>



<!-- Page Heading -->

<div class="card">

    <div class="card-body">
        <form method="post">
            <!-- Row 1 -->
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="example">NIP</label>
                        <input id="txtNIP" type="text" class="form-control" placeholder="Your NIP *" value="" required />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="example">Password</label>
                        <input id="txtPassword" type="text" class="form-control" placeholder="Your Password *" value="" required />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="example">Account Status</label>
                        <input id="txtAccStatus" type="text" class="form-control" placeholder="Your Account Status *" value="" required />
                    </div>
                </div>
            </div>
            <!-- Row 2 -->
            <div class="row mt-5">
                <div class="col-md-4">
                    <div class="form-group">

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group text-center">
                        @* <input id="buttonsubmit" type="submit" name="btnSubmit" class="btnContact" value="Submit Data" />*@
                        <button type="button" class="btn btn-primary add-btn" onclick="return Insert()">Save changes</button>
                    </div>
                </div>
                <div class="col-md-4">

                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts{
    <script src="~/js/Account/Account.js"></script>
}